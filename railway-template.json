{
  "name": "Web to Figma Cloud Capture Service",
  "description": "Complete cloud-based web page capture service that converts websites to Figma designs with pixel-perfect accuracy",
  "icon": "ðŸŽ¨",
  "repository": "stickerverse/url2figma",
  "services": [
    {
      "name": "capture-api",
      "source": {
        "repo": "stickerverse/url2figma",
        "rootDirectory": "capture-service"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "AWS_REGION": "us-east-1", 
        "S3_BUCKET": "figma-capture-assets",
        "S3_ASSET_EXPIRY_HOURS": "24",
        "API_KEY_REQUIRED": "true",
        "API_BASE_URL": "${{RAILWAY_STATIC_URL}}",
        "REDIS_HOST": "${{REDIS.PRIVATE_URL}}",
        "RATE_LIMIT_WINDOW_MS": "900000",
        "RATE_LIMIT_MAX_REQUESTS": "100",
        "WORKER_CONCURRENCY": "2",
        "CAPTURE_TIMEOUT_MS": "90000",
        "BROWSER_HEADLESS": "true",
        "BROWSER_ARGS": "--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage",
        "JOB_RETENTION_DAYS": "7",
        "JOB_MAX_ATTEMPTS": "3",
        "LOG_LEVEL": "info",
        "LOG_PRETTY": "false"
      }
    },
    {
      "name": "redis",
      "source": {
        "image": "redis:7-alpine"
      }
    }
  ]
}
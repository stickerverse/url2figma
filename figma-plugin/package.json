{
  "name": "web-to-figma-plugin",
  "version": "1.0.0",
  "description": "Import web pages as editable Figma designs",
  "scripts": {
    "build": "esbuild src/code.ts --bundle --format=cjs --platform=node --target=es6 --loader:.html=text --outfile=dist/code.js",
    "watch": "esbuild src/code.ts --bundle --format=cjs --platform=node --target=es6 --loader:.html=text --outfile=dist/code.js --watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.3.0"
  }
}

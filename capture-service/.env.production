# Production Environment Variables for Railway
# This file will be automatically loaded by Railway

NODE_ENV=production
PORT=3000

# AWS S3 Configuration - REPLACE WITH YOUR VALUES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=figma-capture-assets
S3_ASSET_EXPIRY_HOURS=24

# Security - REPLACE WITH YOUR VALUES
API_KEY_REQUIRED=true
ALLOWED_API_KEYS=your_secure_api_key_here

# Railway managed services (auto-populated by Railway)
REDIS_HOST=${{REDIS.PRIVATE_URL}}
API_BASE_URL=${{RAILWAY_STATIC_URL}}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Worker Configuration
WORKER_CONCURRENCY=2
CAPTURE_TIMEOUT_MS=90000
BROWSER_HEADLESS=true
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Job Configuration
JOB_RETENTION_DAYS=7
JOB_MAX_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_PRETTY=false